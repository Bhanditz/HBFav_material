<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.rei_m.hbfavmaterial">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".presentation.activity.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".presentation.activity.BookmarkActivity"
            android:label="@string/activity_title_bookmark"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".presentation.activity.OthersBookmarkActivity"
            android:label="@string/activity_title_bookmark"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".presentation.activity.BookmarkedUsersActivity"
            android:label="@string/activity_title_bookmark"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".presentation.activity.SettingActivity"
            android:label="@string/activity_title_setting"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".presentation.activity.ExplainAppActivity"
            android:label="@string/activity_title_explain_app"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".presentation.activity.FrameActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".presentation.activity.OAuthActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

    </application>

</manifest>
