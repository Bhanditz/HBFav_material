<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/layout_icon_hatena_id"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_item_two_column">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/fragment_initialize_image_icon_hatena_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_outline"
            android:layout_marginStart="@dimen/margin_outline"
            android:src="@drawable/ic_person_grey_500_36dp" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/layout_text_hatena_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_item_two_column"
        android:layout_marginLeft="@dimen/margin_content_from_screen"
        android:layout_marginStart="@dimen/margin_content_from_screen"
        android:background="@drawable/bg_border_bottom_accent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingEnd="@dimen/margin_outline"
        android:paddingLeft="0dp"
        android:paddingRight="@dimen/margin_outline"
        android:paddingStart="0dp">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_title_user_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_hatena_account"
            android:textSize="@dimen/text_size_caption" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_user_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_title" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/layout_icon_hatena_oauth"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_item_two_column"
        android:layout_below="@id/layout_icon_hatena_id">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/image_icon_hatena_oauth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_outline"
            android:layout_marginStart="@dimen/margin_outline"
            android:src="@drawable/ic_sync_grey_500_36dp" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/layout_text_hatena_oauth"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_item_two_column"
        android:layout_below="@id/layout_text_hatena_id"
        android:layout_marginLeft="@dimen/margin_content_from_screen"
        android:layout_marginStart="@dimen/margin_content_from_screen"
        android:background="@drawable/bg_border_bottom_accent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingEnd="@dimen/margin_outline"
        android:paddingLeft="0dp"
        android:paddingRight="@dimen/margin_outline"
        android:paddingStart="0dp">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_title_user_oauth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="はてなブックマーク連携"

            android:textSize="@dimen/text_size_caption" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_user_oauth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_title" />

    </LinearLayout>

</RelativeLayout>
